<Window x:Class="AsyncAwait_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncAwait_Demo"
        mc:Ignorable="d"
        Title="Async und Await in WPF" Height="180" Width="250" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBox Margin="10"/>
        <Button Content="Start !" Margin="10" Click="Button_Click"/>
        <ProgressBar x:Name="progressBarWert" Minimum="0" Maximum="100" Margin="10" Height="20"/>
    </StackPanel>
</Window>
